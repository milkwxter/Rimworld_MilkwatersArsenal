<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <!--===== Paltik Shotgun =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Paltik</defName>
    <label>paltik</label>
    <description>A handmade shotgun that emits a tight-packed spray of pellets. Deadly in close quarters, but it takes forever to reload.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/m_paltik</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <weaponClasses>
      <li>ShortShots</li>
    </weaponClasses>
    <weaponTags>
      <li>ShortShots</li>
      <li>PumpShotgun</li>
    </weaponTags>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>3.4</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.77</AccuracyMedium>
      <AccuracyLong>0.64</AccuracyLong>
      <RangedWeapon_Cooldown>2.25</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Bullet_Paltik</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>15.9</range>
        <soundCast>Milkwater_Shot_Paltik</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <!--===== Lantaka Cannon =====-->
